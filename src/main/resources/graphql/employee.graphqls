type Query {
    employees: [Employee]
    employeeById(id: ID!): Employee
    employeeByEmail(email: String!): Employee
}

type Mutation {
    addEmployee(input: EmployeeInput!): Employee!
}

type Employee {
    id: ID!
    name: String!
    dateOfBirth: String!
    city: String!
    salary: Float!
    gender: String
    email: String
}

input EmployeeInput {
    name: String!
    dateOfBirth: String!
    city: String!
    salary: Float!
    gender: String
    email: String
}
